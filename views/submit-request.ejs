                    <div class="btn-container col-sm-12 content-area">
                        <div class="form-group text-center">
                            <button type="button" onclick="SubmitRequest('save-property-details');" class="button transparent submit-button">save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
